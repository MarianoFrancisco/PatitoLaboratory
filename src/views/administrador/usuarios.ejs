    <!-- Modal -->
    <div
    class="modal modal-signin bg-secondary py-5"
    tabindex="-1"
    role="dialog"
    id="modalSignin1"
    aria-hidden="true"
    >
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-5 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <!-- <h5 class="modal-title">Modal title</h5> -->
          <h2 class="fw-bold mb-0">Formulario Agregar Usuario</h2>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        <div class="modal-body p-5 pt-0">
          <form action="/saveUsuario" method="POST" class="was-validated">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control rounded-4"
                id="usuario"
                name="usuario"
                required
              />
              <label for="nombreUsuario">Nombre</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="email"
                class="form-control rounded-4"
                id="correo"
                name="correo"
                required
              />
              <label for="correo">Correo</label>
            </div>
            <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control rounded-4"
                  id="passwordUsuario"
                  name="passwordUsuario"
                  required
                />
                <label for="passwordUsuario">Contraseña</label>
              </div>
              <div class="form-floating mb-3">
                <select 
                  type="number"
                  class="form-control rounded-4"
                  id="idTurno"
                  name="idTurno"
                >
                <% results2.forEach((turno)=>{%>
                  <option value="<%=turno.idTurno%>"><%=turno.idTurno%></option> 
                <%})%>
               </select>
              <label for="idTurno">Turno</label>
            </div>
            <div class="form-floating mb-3">
              <select 
                type="number"
                class="form-control rounded-4"
                id="tipoUsuario"
                name="tipoUsuario"
                >
                  <option value="1">Administrador</option> 
                  <option value="2">Secretaria</option> 
                  <option value="3">Laboratorista</option>
               </select>
              <label for="tipoUsuario">Rol de usuario</label>
            </div>
            <br>
            <button
              class="w-100 mb-2 btn btn-lg rounded-4 btn-primary"
              type="submit"
            >
              Agregar Usuario
            </button>
            <hr class="my-4" />
          </form>
        </div>
      </div>
    </div>
