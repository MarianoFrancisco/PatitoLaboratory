                <div class="user-dashboard">

        <hr>
        <button class="btn btn-primary btn-lg" type="button" data-bs-toggle="modal" data-bs-target="#modalSignin1">
            Ingresar Usuario
        </button>
            <br>
            <br>             
        <table class="table table-bordered">
        <thead>
            <tr>
            <th >Nombre de Usuario</th>
            <th class="text-center">Correo</th>
            <th class="text-center">Turno</th>
            <th class="text-center">Rol</th>
            <th class="text-center">Editar</th>
            </tr>
        </thead> 
        <tbody><%var rol;%>
                <% results.forEach((usuario)=>{
                  if(usuario.tipoUsuario==1){
                    rol='Administrador';
                  }else if(usuario.tipoUsuario==2){
                    rol='Secretaria';
                  }else if(usuario.tipoUsuario==3){
                    rol='Laboratorista';
                  }
                    %>
                <tr>
                    <td class="text-center"><%=usuario.usuario%></td>
                    <td class="text-center"><%=usuario.correo%></td>
                    <td class="text-center"><%=usuario.idTurno%></td>
                    <td class="text-center"><%=rol%></td>
                    <td class="text-center">
                        <a href="/editarUsuario/<%=usuario.usuario%>" class="btn btn-primary ">Modificar</a>
                        <% if (usuario.estado) { %>
                          <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="estatus1" onclick="modificarUser('<%= usuario.usuario %>',' <%= usuario.estado %>')" checked="on">
                            <label class="form-check-label" for="flexSwitchCheckChecked"id="<%= usuario.usuario%>" ></label>
                          </div>
                        <% }else{ %>
                            <div class="form-check form-switch">
                              <input class="form-check-input" type="checkbox" name="estatus2"  onclick="modificarUser('<%= usuario.usuario %>',' <%= usuario.estado %>')" >
                              <label class="form-check-label" for="flexSwitchCheckChecked" id="<%= usuario.usuario%>"></label>
                            </div>
                        <% } %>
                    </td>
                </tr>
                <%})%>
        </tbody>            
