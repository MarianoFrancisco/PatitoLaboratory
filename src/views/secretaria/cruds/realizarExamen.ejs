<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Modificar Usuario</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <% if (user){ %>
        <div class="container">
            <h1 style="text-align: center;">Generar examen</h1>
            <hr>
            <form action="/ExamenPaciente" method="post" class="form-control" style="width: 500px; height: 470px">
                <br>
                Cui
                <p style="font-size: larger;">
                    <%= user.cui%>
                </p>
                <input id="cui" name="cui" value="<%=user.cui%>" hidden>

                Fecha del examen:
                <input type="date" id="txtfecha" name="txtfecha" class="form-control" required />
                <br>

                Examen a realizar
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>
                <select name="examen" id="examen" class="form-control" required>
                    <option value="" disabled selected>Seleccione un examen</option>
                    <% examen.forEach((examen)=>{
                        %>
                        <option value='<%=examen.codigoExamen%>'>
                            <%=examen.nombreExamen%>
                        </option>
                        <% })%>
                </select>

                <script>$("#examen").change(function () {

                    

                        //var selecionado = document.getElementById("examen");
                        //var opcion = selecionado.options[selecionado.selectedIndex].text;

                        if (document.getElementById("examen").value == "100") {

                            //deshabilitar micro y macro



                            // habilitar solo completo
                            console.log("Estoy en Completo")
                            var padre = document.getElementById("tipoExamen")[1].removeAttribute("disabled");




                        } else {
                            //deshabilitar completo


                            //habilitar micro y macro
                            console.log("micro macro");
                            var padre = document.getElementById("tipoExamen")[2].removeAttribute("disabled");
                            var padre = document.getElementById("tipoExamen")[3].removeAttribute("disabled");

                        }


                    });</script>

                <br>

                Tipo del examen
                <select type="text" name="tipoExamen" id="tipoExamen" class="form-control" required>
                    <option value="" selected disabled hidden>-- Seleccionar --</option>
                    <option value="Completo" > Completo </option>
                    <option value="Microscopico" > Microscopico </option>
                    <option value="Macroscopico" > Macroscopico </option>

                </select>
                
                <br>
                Nombre del subexamen
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>

                <select name="Subexamen" id="Subexamen" class="form-control" required>
                    <option value="" disabled selected>Seleccione un examen</option>
                    <%macroHeces.forEach((subExamen)=>{
                        %>
                        <option value='<%=subExamen.nombreSub%>'>
                            <%=subExamen.nombreSub%>
                        </option>
                        <% })%>
                </select>

                <br>

                <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />

                <a href="/ingresarPaciente">Regresar</a>
            </form>
        </div>

        <% } %>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>
</body>

</html>