    <!-- Modal -->
    <div
    class="modal modal-signin bg-secondary py-5"
    tabindex="-1"
    role="dialog"
    id="modalSignin2"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-5 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <!-- <h5 class="modal-title">Modal title</h5> -->
          <h2 class="fw-bold mb-0" style="text-align: center;" >Ingresar paciente y examen</h2>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        <div class="modal-body p-5 pt-0">
          <form action="/secretaria/ingresarPaciente" method="post" class="was-validated">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control rounded-4"
                id="Nombre"
                name="nombre"
                required
              />
              <label for="floatingInputName">Nombre</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control rounded-4"
                id="Apellido"
                name="apellido"
                required
              />
              <label for="floatingInputDay">Apellido</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control rounded-4"
                id="cui"
                name="cui"
                required
              />
              <label for="floatingInputDay">CUI</label>
            </div>
            <div class="form-floating mb-3">
              <select 
                type="number"
                class="form-control rounded-4"
                id="Sexo"
                name="sexo"
                onchange="var id = document.querySelector('select');
                var idExamens = id.value;
                console.log(idExamens);"
                >
                  <option value="M">Masculino</option> 
                  <option value="F">Femenino</option> 
               </select >
              <label for="tipoUsuario">Sexo</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control rounded-4"
                id="Edad"
                name="edad"
                required
              />
              <label for="floatingPhone">Edad</label>
            </div>
            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control rounded-4"
                id="Telefono"
                name="telefono"
                required
              />
              <label for="floatingPhone">Número telefonico</label>
            </div>
            <div class="form-floating mb-3">
              <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="estadoPaciente"  checked="on">
                <label class="form-check-label" for="flexSwitchCheckChecked" >Habilitar Paciente</label>
              </div>
            </div>

            <button
              class="w-100 mb-2 btn btn-lg rounded-4 btn-primary"
              type="submit"
            >
              Agregar paciente
            </button>
            <hr class="my-4" />
          </form>
        </div>
      </div>
